<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>perococco.bot</groupId>
        <artifactId>maven</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../maven/pom.xml</relativePath>
    </parent>

    <name>${root.name}</name>

    <artifactId>perobobbot-backend</artifactId>
    <packaging>pom</packaging>

    <properties>
        <root.name>Perococco Bot Backend</root.name>
    </properties>

    <modules>
        <!-- Implementation that is not specific to the bot -->
        <module>engine/perobobbot.lang</module>
        <module>engine/perobobbot.math</module>
        <module>engine/perobobbot.command</module>
        <module>engine/perobobbot.messaging</module>
        <module>engine/perobobbot.irc</module>
        <module>engine/perobobbot.common.sound</module>

        <!-- API and implementation to easily create Chat -->
        <module>chat/perobobbot.chat.core</module>
        <module>chat/perobobbot.chat.advanced</module>
        <module>chat/perobobbot.chat.websocket</module>

        <!-- Module to handle data persistence -->
        <module>data/perobobbot.data.com</module>
        <module>data/perobobbot.data.domain</module>
        <module>data/perobobbot.data.service</module>
        <module>data/perobobbot.data.jpa</module>
        <module>data/perobobbot.data.schema</module>

        <!-- Module used by extensions -->
        <module>engine/perobobbot.extension</module>
        <module>engine/perobobbot.access</module>
        <module>engine/perobobbot.rendering</module>
        <module>engine/perobobbot.overlay.api</module>
        <module>engine/perobobbot.overlay.newtek</module>

        <!-- extensions. The scope of the dependencies
        to these modules should be runtime -->
        <module>extensions/twitch/perobobbot.twitch.chat</module>
        <module>extensions/perobobbot.localio</module>
        <module>extensions/perobobbot.dvdlogo</module>
        <module>extensions/perobobbot.puckwar</module>
        <module>extensions/perobobbot.greeter</module>
        <module>extensions/perobobbot.echo</module>
        <module>extensions/perobobbot.benchmark</module>

        <module>perobobbot.server</module>
        <module>packaging</module>
    </modules>

</project>