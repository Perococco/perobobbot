@startuml
!if TOTO
!define TOTO
class Bot {
   +name:String,
   +deactivated:bool,
   +owner:User,
   +joined_channels:List<JoinedChannel>,
   +extensions:List<Extension>,
}

class UserTwitchSubscription {
  + owner : User,
  + subscription : Subscription;
}

class TwitchSubscription {
  + subscriptionId : String,
  + type : String,
  + condition : String
}

class Extension {
  + name:String,
  + activated:boolean,
  + available:boolean,
}

class BotExtension {
  + bot:Bot,
  + extension:Extension,
  + enabled:boolean,
}

class JoinedChannel {
  + viewerIdentity: ViewerIdentity,
  + bot:Bot
  + channelName:String,
}

class Role {
 +role:RoleKind
 +allowed_operations:Set<Operation>
}

class Safe #C8FF8D {
 +channelName:String,
 +platformUser:PlatformUser,
 +amount:int
 +pointType:PointType,
}

class PlatformUser #FFD538 {
    discordUser:?DiscordUser,
    twitchUser:?DiscordUser,
}

class DiscordUser #FFD538 {
    userId:String
    login:String
    discriminator:String
}

class TwitchUser #FFD538 {
    userId:String,
    login:String,
    pseudo:String
}

class Client {
    platform:Platform,
    clientId:String,
    clientSecret:String
}

class ClientToken #7591FF {
     client:Client
}

note left of UserToken {
At least one of
**discordUser**
and **twitchUser**
must be specified,
but not both
}
class UserToken #7591FF {
    owner:User
    discordUser:?DiscordUser,
    twitchUser:?TwitchUser,
    refreshToken:String,
    scopes:String
}

abstract class Token #FF6259 {
    accessToken:String,
    duration:long,
    expirationDate:Instant,
}

class Transaction #C8FF8D {
  +safe:Safe
  +state:TransactionState
  +expirationDate:Instant
  +amount:int
}

class User {
+ deactivated:boolean,
+jwt_claim:String,
+locale:String,
+login:String,
+password:String,
}

class Overlay {
+name:String
+urlId:String
+width:int
+height:int
+widgetGeometries:List<WidgetGeometry>
}

class WidgetGeometry {
+widgetName:string
+x:int
+y:int
+width:int
+height:int
}




@enduml
